<%- include('../partials/header') %>

<table class="table table-striped table-secondary">Your Clubs
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Brand</th>
            <th scope="col">Model</th>
            <th scope="col">Condition (head, shaft, grip)</th>
            <th scope="col">For Sale</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <% clubs.forEach(function(club){ %>
        <tr><td>
            <a href="clubs/<%= club._id %>">Details</a>
        </td>
           <td><%= club.brand %> </td>
            <td><%= club.model %> </td>
            <td><%= club.condition[0] +", "+ club.condition[1] +", "+ club.condition[2] %> </td>
            <td><%= club.forSale ? 'Up for sale' : 'Not for sale' %> </td> 
        
            
            <td><form action="/clubs/<%= club._id %>?_method=DELETE" method="post">
                <button class="button">X</button></td>
            </form>
        </tr>
        <% }) %>
    </tbody>
</table> 
    
<ul class="list-group list-group-flush">
    <button type="submit" class="list-group-item list-group-item-action" data-bs-toggle="modal" data-bs-target="#newClubModal">Add new club</button>
</ul>

<div class="modal fade" id="newClubModal" tabindex="-1" aria-labelledby="newClubModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content d-flex">
        <div class="modal-header">
          <h5 class="modal-title text-center" id="newClubModalLabel">Add a new club!</h5>
          
        </div>
        <div class="modal-body">
            <form action="/clubs" method="post" encType="multipart/form-data">
              <label for="clubType" class="form-label">Club Type</label>
              <select name="clubType"  class="form-select mb-3" id="clubType">
                    <option value="Driver">Driver</option>
                    <option value="Fairway Wood">Fairway Wood</option>
                    <option value="Utility Iron/Hybrid">Utility Iron/Hybrid</option>
                    <option value="Iron Set">Iron Set</option>
                    <option value="Wedge">Wedge</option>
                    <option value="Putter">Putter</option>
              </select>
              <label for="brand-select" class="form-label">Brand</label>
                <select class="form-select mb-3" name="brand" id="brand-select">
                  <%brands.forEach(function(brand){ %>
                    <option value="<%=brand%>"><%=brand%></option>
                  <%})%>
                </select>
                <div class="mb-3">
                    <label for="model" class="form-label">Model</label>
                    <input  class="form-control" id="model" name="model" required>
                </div>
                <div class="mb-3">
                  <select class="form-select mb-3" name="headCondition" aria-label="Default select example">
                    <option selected>Head Condition</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                  </select>
                </div>
                
                  <div class="mb-3">
                    <select class="form-select mb-3" name="shaftCondition" aria-label="Default select example">
                    <option selected>Shaft Condition</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                  </select>
                  </div>
                
                <div class="mb-3">
                  <select class="form-select mb-3" name="gripCondition" aria-label="Default select example">
                    <option selected>Grip Condition</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                  </select>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" name="forSale" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">For Sale</label>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Upload Picture</label>
                    <input name="pic" class="form-control" type="file" id="formFileMultiple" accept=".jpg">
                </div>
                <div class="mb-3">
                  <label for="askingPrice" class="form-label">Asking Price (Â£)</label>
                  <input type="number" class="form-control" id="askingPrice" name="value" required>
              </div>
              <div class="form-floating mb-3">
                <textarea name="notes" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                <label for="floatingTextarea2">Comments</label>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            
            </form>
        </div>
        
      </div>
    </div>
  </div>


<%- include('../partials/footer') %>