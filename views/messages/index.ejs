<%- include('../partials/header') %>

<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="pills-selling-tab" data-bs-toggle="pill" data-bs-target="#pills-selling" type="button" role="tab" aria-controls="pills-selling" aria-selected="true">Selling</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pills-buying-tab" data-bs-toggle="pill" data-bs-target="#pills-buying" type="button" role="tab" aria-controls="pills-buying" aria-selected="false">Buying</button>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-selling" role="tabpanel" aria-labelledby="pills-selling-tab" tabindex="0">
        <table class="table table-striped table-secondary">Selling Messages
            <thead>
                <tr>
                    <th scope="col">From</th>
                    <th scope="col">Club</th>
                    <th scope="col">Message</th>
                    
                </tr>
            </thead>
            <tbody>
                <% messagesSell.forEach(function(message, idx){ %>
                <tr>
                   <td><%= buyers[idx].email %> </td>
                    <td><%= clubSell[idx].model %> </td>
                    <td><%= message.messages[0].slice(0, 20) + "..." %> </td>
                </tr>
                <% }) %>
            </tbody>
        </table> 
    </div>
    <div class="tab-pane fade" id="pills-buying" role="tabpanel" aria-labelledby="pills-buying-tab" tabindex="0">
      <table class="table table-striped table-secondary">Selling Messages
        <thead>
            <tr>
                <th scope="col">From</th>
                <th scope="col">Club</th>
                <th scope="col">Message</th>
                
            </tr>
        </thead>
        <tbody>
            <% messagesBuy.forEach(function(message, idx){ %>
            <tr>
               <td><%= sellers[idx].email %> </td>
                <td><%= clubBuy[idx].model %> </td>
                <td><%= message.messages[0].slice(0, 20) + "..." %> </td>
            </tr>
            <% }) %>
        </tbody>
    </table> 
</div>

    </div>
    
  </div>





