<%- include('../partials/header') %>

<section style="background-color: #ffffff;">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="card text-black mb-3">
          
          <img src="data:image/jpd;base64,<%=club.pictures.toString('base64')%>"
            class="card-img-top" alt="Club" />
          <div class="card-body">
            <div class="text-center">
              <h3 class="card-title"><%= club.model %></h5>
              <p class="text-muted mb-4"><%= club.brand %></p>
              <p class="text-muted mb-4"><%= club.clubType %></p>
            </div>
            <div>
              <div class="d-flex justify-content-between h5">
                <span>Head Condition</span><span><%=club.condition[0]%>/10</span>
              </div>
              <div class="d-flex justify-content-between h5">
                <span>Shaft Condition</span><span><%=club.condition[1]%>/10</span>
              </div>
              <div class="d-flex justify-content-between h5">
                <span>Grip Condition</span><span><%=club.condition[2]%>/10</span>
              </div>
            </div>
            <div class="d-flex justify-content-between total font-weight-bold mt-4 h5">
              <span>Asking Price</span><span>Â£<%=club.value%></span>
            </div>
          </div>
          <% if(user) { %> 
          <ul class="list-group list-group-flush">
            <button type="submit" class="btn btn-primary align-center" data-bs-toggle="modal" data-bs-target="#newClubModal">Make Offer!</button>
          </ul>
        <%}%>
        </div>
        <div class="card text-black">
          <div class="card-body"> 
            <div class="d-flex justify-content-center h4">
              <span>Notes</span> 
            </div>
            <div class="d-flex justify-content-start h5">
              <span><%=club.notes%></span>
            </div>
          </div>
        </div>
        
      </div>
      
    </div>
    
  </div>

</section>



<div class="modal fade" id="newClubModal" tabindex="-1" aria-labelledby="newClubModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content d-flex">
        <div class="modal-header">
          <h5 class="modal-title text-center" id="newClubModalLabel">Make offer!</h5>
          
        </div>
        <div class="modal-body">
            <form action="/home/<%=club._id%>/messages" method="post" encType="multipart/form-data">
                <div class="mb-3">
                    <label for="offer" class="form-label">Offer</label>
                    <input  type="number" class="form-control" id="offer" name="offer" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <input  class="form-control" id="message" name="message" required>
                
                <button type="submit" class="btn btn-primary">Submit</button>
            
            </form>
        </div>
        
      </div>
    </div>
  </div>



<%- include('../partials/footer') %>