              <div class="text-center">
                <h3 class="card-title"><%= club.model %></h5>
                <p class="text-muted mb-2"><%= club.brand %></p>
                <p class="text-muted mb-4"><%= club.clubType %></p>
              </div>
              <div class="d-flex justify-content-center total font-weight-bold mt-4 h5">
                <span>Â£<%=club.value%></span>
              </div>
            </div>
          </div>
    </a>
     
    <% }) %>
